<%- include('header') -%>
    <h1 class="text-center mt-4">به صفحه گزارشات خوش آمدید</h1>

    <div class="d-flex align-items-center justify-content-center min-vh-100">
        <div class="container">
            <% if (!startDate || !endDate) { %>
                <p class="text-center">:یک فاصله زمانی رو انتخاب کن</p>
                <div class="form">
                    <form action="/expenses/report" method="post">
                        <div class="form-group">
                            <label for="startDate">از تاریخ:</label>
                            <input type="date" class="form-control" id="startDate" name="startDate" required>
                        </div>
                        <div class="form-group">
                            <label for="endDate">تا تاریخ:</label>
                            <input type="date" class="form-control" id="endDate" name="endDate" required>
                        </div>
                        <div class="d-grid gap-2 col-3 mx-auto mb-2">
                            <button type="submit" class="btn btn-success mt-4">گزارش بده</button>
                        </div>
                    </form>
                </div>
                <% } else { %>
                    <% if (expenses && expenses.length> 0) { %>
                        <table class="table table-striped table-bordered expense-table">
                            <thead>
                                <tr>
                                    <th>نوع</th>
                                    <th>مقدار</th>
                                    <th>دسته</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% expenses.forEach(expense=> { %>
                                    <tr>
                                        <td>
                                            <%=expense.description%>
                                        </td>
                                        <td>
                                            <%=expense.amount%>
                                        </td>
                                        <td>
                                            <%=expense.category%>
                                        </td>
                                    </tr>
                                    <% }); %>
                                        <tr>
                                            <td id="amount"><%=totalExpense%> <span class="currency-font">هزارتومان</span></td>
                                        </tr>
                            </tbody>
                        </table>

                        <% } else if (expenses && expenses.length===0) { %>
                            <p class="text-center"> .در فاصله زمانی داده شده هیچ هزینه ای یافت نشد</p>
                            <div class="d-grid gap-2 col-3 mx-auto mb-2">
                                <a href="/expenses/report" class="btn btn-primary">انتخاب فاصله زمانی دیگر</a>
                            </div>
                            <% } %>
                                <% } %>
                                    <div class="d-grid gap-2 col-3 mx-auto mb-2">
                                        <a href="/expenses" class="btn btn-warning mt-2 mb-2">بازگشت به صفحه هزینه
                                            ها</a>
                                    </div>
        </div>
    </div>



    <%- include('footer') -%>