
<%- include('header') -%>
<h1 class="text-center">اصلاح هزینه</h1>
<div class="d-flex align-items-center justify-content-center min-vh-100">
<div class="container form">
    <form method="POST" action="/expenses/<%= expense._id %>?_method=PUT">
        <div class="form-group">
            <label for="description">نام هزینه:</label>
            <input type="text" id="description" name="description" value="<%=expense.description%>" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="amount">مقدار:</label>
            <input type="text" id="amount" name="amount" value="<%=expense.amount%>" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="category">گروه:</label>
            <input type="text" id="category" name="category" value="<%=expense.category%>" class="form-control" required>
        </div>
        <div class="text-center mt-5">
            <button type="submit" class="btn btn-success">ذخیره تغییرات</button>
            <a href="/expenses" class="btn btn-danger">لغو کردن</a>
        </div>
    </form>
</div>
</div>
<%- include('footer') -%>








   
